/* pages/authorize/authorize.wxss */
.header {
    margin: 90rpx 0 90rpx 50rpx;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 70rpx;
}

.header image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 100rpx;
}

.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}

.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}

.divLine{
  background: #E0E3DA;
  width: 98%;
  height: 2rpx;
}

.divider{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 50rpx;
}

.button{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 300rpx
}

.button button{
  height: 50rpx;
  width: 350rpx;
  border-radius: 50rpx;
  font-size: 35rpx;
  letter-spacing: 0.3em;
  display: flex;
  align-items: center;
  justify-content: center;
}

