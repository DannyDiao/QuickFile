<!--pages/createTask/createTask.wxml-->
<view class="page">
  <view class="weui-form">
    <view class="weui-form__text-area">
      <view class="weui-form__title">发布任务</view>
      <view class="weui-form__desc">请填写任务信息</view>
    </view>
    <form bindsubmit="formSubmit">
    <view class="weui-cells weui-cells_after-title createtask">
      <view class="weui-cell ">
        <view class="weui-cell__hd">
          <view class="weui-label">任务名称</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name="taskName" maxlength="10" placeholder="请输入任务名称" />
        </view>
      </view>
      <view class="weui-cell ">
        <view class="weui-cell__hd">
          <view class="weui-label">文件类型</view>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="bindPickerChange" name="fileTypeIndex" value="{{index}}" range="{{fileTypeArray}}">
            <view class="weui-input">{{filetype}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell ">
        <view class="weui-cell__hd">
          <view class="weui-label">截止日期</view>
        </view>
        <view class="weui-cell__bd">
          <picker mode="date" name="deadDate" value="{{date}}" start="2019-09-01" bindchange="bindDateChange">
            <view class="weui-input">{{date}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell ">
        <view class="weui-cell__hd">
          <view class="weui-label">截止时间</view>
        </view>
        <view class="weui-cell__bd">
          <picker mode="time" name="deadTime" value="{{time}}" start="00:00" end="23:59" bindchange="bindTimeChange">
            <view class="weui-input">{{time}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell ">
        <view class="weui-cell__hd">
          <view class="weui-label">任务备注</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name="taskDetails" maxlength="100"  placeholder="选填" />
        </view>
      </view>
    </view>
    <view class="weui-form__opr-area">
      <button form-type="submit" type="primary">确认发布</button>
    </view>
    </form>
  </view>
</view>
<mp-dialog title="发布失败" show="{{showOneButtonDialog}}" bindbuttontap="tapDialogButton" buttons="{{oneButton}}">
  <text>{{dialogmessage}}</text>
</mp-dialog>
<mp-dialog show="{{showOneButtonDialog1}}" bindbuttontap="tapDialogButton1" buttons="{{oneButton}}">
  <text>{{dialogmessage1}}</text>
</mp-dialog>