  <view>球文件</view>
</view>
<view class='divider'>
  <view class='divLine'></view>
</view>
<form bindsubmit="formSubmit">
  <van-field
    name="username"
    left-icon="user-o"
    clearable="true"
    label="姓名"
    placeholder="请输入姓名"
  />
