    name="userid"
    left-icon="idcard"
    clearable="true"
    label="学号"
    placeholder="请输入学号"
    maxlength="13"
  />
  <view class="button">
    <button form-type="submit" type='primary'>
      确认提交
    </button>
  </view>
</form>

