/* pages/bind/bind.wxss */
.header {
    margin: 90rpx 0 90rpx 50rpx;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 70rpx;
}

.header image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 100rpx;
}

.button{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 300rpx
}

.button button{
  height: 50rpx;
  width: 350rpx;
  border-radius: 50rpx;
  font-size: 35rpx;
  letter-spacing: 0.3em;
  display: flex;
  align-items: center;
  justify-content: center;
}