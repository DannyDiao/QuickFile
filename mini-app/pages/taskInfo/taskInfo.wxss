/* pages/taskInfo/taskInfo.wxss */
.taskView {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.taskName{
  margin:20px 20px 10px 20px;
  font-size: 18px;
}
.infoView{
  margin-left: 20px;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  align-items: left;
}
.commitView{
  display: flex;
  flex-direction: row;
  margin: 10px;
  width: 95%;
  height: 150px;
  border: 2px solid rgb(145, 190, 204);
  border-radius: 10rpx;
}
.commit{
  margin-left: 5px;
  height: 100%;
  width: 30px;
}
.commitContent{
  flex-wrap: wrap;
  word-break: break-all;
}
.uploadView{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.fileName{
width: 90%;
margin: 0px 10px 10px 10px;
border: 1px solid rgb(171, 220, 226);
border-radius: 5rpx;
background-color: white;
}
.buttonView{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
button[plain] {
  border: 0;
  padding: 0;
  margin: 0;
}
.buttonView button{
  text-align: center;
  padding: 8px;
margin:0px 30px 10px 30px;
  background-color: rgb(130, 189, 223);
  color: white;
}