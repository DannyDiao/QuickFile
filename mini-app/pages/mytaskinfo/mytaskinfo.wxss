/* pages/mytaskinfo/mytaskinfo.wxss */
.taskname{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 50rpx;
  font-size: 40rpx;
}

.left{
  text-align: right;
}

.divLine{
  background: rgb(215, 216, 212);
  width: 98%;
  height: 2rpx;
}

.divider{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 20rpx;
}

.button{
  width: 100%;
}

.button button{
  width: 100%;
  height: 100rpx;
  border-width: 2rpx;
  border-color: #EDEDED;
  border-style: solid;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.button button::after{
  border: none;
}

.button image{
  height: 50rpx;
  width: 50rpx;
}

.button2{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
}

.button2 button{
  height: 30rpx;
  width: 180rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  letter-spacing: 0.3em;
  display: flex;
  align-items: center;
  justify-content: center;
}