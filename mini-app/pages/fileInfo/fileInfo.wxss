/* pages/fileInfo/fileInfo.wxss */
.taskView {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.taskName{
  margin:40rpx 40rpx 20rpx 40rpx;
  font-size: 36rpx;
}
.infoView{
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  align-items: left;
}
.commitView{
  margin: 40rpx;
  width: 95%;
  border: 3rpx solid rgb(145, 190, 204);
  border-radius: 20rpx;
}
.commitContent{
  display: block;
  margin: 20rpx;
  word-break: break-all;
}

.divLine{
  background: rgb(215, 216, 212);
  width: 98%;
  height: 2rpx;
}

.divider{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 20rpx;
}

.button-sp-area{
    margin: 0 auto;
    padding-top: 15px;
    text-align:center;
}
.mini-btn{
    margin: 0 4px;
}